{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "baseUrl": "src",
    "paths": {
      "@environments/*": [
        "environments/*"
      ],
      "@services/*": [
        "app/services/*"
      ],
      "@guards/*": [
        "app/guards/*"
      ],
      "@pipes/*": [
        "app/pipes/*"
      ],
      "@components/*": [
        "app/components/*"
      ],
    },
    "lib": [
      "es2017",
      "dom"
    ],
  }
}