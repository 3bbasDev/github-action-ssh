<html>
    <head>
        <title>${pageTitle}</title>
        <style>
            .withoutdots {
                list-style-type: none;
            }

            .width100 {
                width: 100%;
            }
        </style>
    </head>
    <body>
        <h1>Logo immoapps</h1>
        <br />
        <#if companyName?has_content>
            <div class="width100">
                <p>
                    ${companyName}<br />
                    ${companyStreetAndNo}<br />
                    ${companyZip} ${companyPlace}
                </p>
                <br />
            </div>
        </#if>

        <h1>Inspektion der Immobilie: ${propertyName} (${propertyAddress})</h1>
        <br />
        <h2>Inspektion durchgef端hrt von: ${userName} (Email: ${userEmail})</h2>
        <br />
        <h2>Gepr端fte Kriterien</h2>
        <table width="100%">
            <tr>
                <th>Name des Pr端fkriteriums</th>
                <th>Ergebnis der Pr端fung</th>
            </tr>
            <#list criterias as criteria>
                <tr>
                    <td>${criteria.name}</td>
                    <td>${criteria.result}</td>
                </tr>
            </#list>
        </table>
        <br />
        <h2>Notizen der Inspektion</h2>
        <ul class="withoutdots">
            <#list descriptions as description>
                <li>
                    Kriterium ${description.name} <br />
                    Notiz: ${description.value}
                </li>
            </#list>
        </ul>
        <br />
        <h2>Bilder der Inspektion</h2>
        <ul class="withoutdots">
            <#list images as image>
                <li>
                    <div>Kriterium: ${image.name}</div>
                    <div style="width: 80%;">
                        <img src="data:${image.type};base64,${image.data}" />
                    </div>
                </li>
            </#list>
        </ul>
    </body>
</html>