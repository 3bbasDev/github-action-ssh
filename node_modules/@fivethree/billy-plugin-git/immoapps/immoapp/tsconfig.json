{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "src",
    "paths": {
      "@environments/*": [
        "environments/*"
      ],
      "@services/*": [
        "app/services/*"
      ],
      "@components/*": [
        "app/components/*"
      ],
      "@interceptors/*": [
        "app/interceptors/*"
      ],
      "@store/*": [
        "app/store/*"
      ],
    },
  }
}